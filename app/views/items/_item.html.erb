<li class="item <%= one_or_two_line_height(item) %> <%= mark_if_closed(item) %> <%= mark_if_task(item) %>" id="<%= element_id_or_empty(item) %>">
  <span class="body">
    <input type="checkbox" class="checkbox"/>
    <div class="spinner"> </div>
    <div class="id"><%= record_id_or_empty(item) %></div>
    <div class="issue_id_container"><%= issue_id_or_default (item) %></div>
    <div class="subject editable" fieldname="subject" modelname="issue"><%=h item.subject %></div>
    <div class="status_id editable" fieldtype="select" fieldname="status_id" modelname="issue">
      <div class="t"><%= status_label_or_default(item) %></div>
      <div class="v"><%= status_id_or_default(item) %></div>
    </div>
    <div class="points editable" fieldname="points" modelname="item"><%= points_or_empty(item) %></div>
    <div class="description editable" fieldtype="textarea" fieldname="description" modelname="issue">
      <div class="textile"><%= textile_description_or_empty(item) %></div>
      <div class="html"><%= description_or_empty(item) %></div>
    </div>
    <div class="tracker_id editable" fieldtype="textarea" fieldname="tracker_id" modelname="issue">
      <div class="t"><%= tracker_name_or_empty(item) %></div>
      <div class="v"><%= tracker_id_or_empty(item) %></div>
    </div>
  </span><!-- body -->
</li>
